generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  COMPANY
}

enum Specialty {
  FRONTEND
  BACKEND
  FULLSTACK
  MOBILE
  DATA
  BI
  CYBERSECURITY
  DESIGN
  DEVOPS
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  
  // ───── Authentication ─────
  email           String   @unique
  passwordHash    String
  isEmailVerified Boolean  @default(false)

  role            UserRole @default(USER)

  // ───── Basic Identity ─────
  firstName       String
  lastName        String
  avatarUrl       String?

  // ───── CV & AI Classification ─────
  cvUrl           String?         // Stored CV file
  mainSpecialty   Specialty?      // Result of AI classification
  skillTags       String[]        // ["nestjs", "react", "flutter"]

  // ───── Trust & Performance ─────

  totalChallenges Int     @default(0)
  totalWins       Int     @default(0)

  // ───── Wallet ─────
  walletBalance   Float   @default(0)

  // ───── Status ─────
  isBanned        Boolean @default(false)
  bannedReason    String?

  // ───── Relations ─────
  //rooms           RoomParticipant[]
  //submissions     Submission[]
  //rewards         Reward[]
  
  //companyProfile  Company?         @relation(fields: [companyId], references: [id])
  //companyId       String?

  // ───── Metadata ─────
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([role])
  @@index([mainSpecialty])
}

model EmailVerification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  code      String   // 6-digit verification code
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([code])
}
